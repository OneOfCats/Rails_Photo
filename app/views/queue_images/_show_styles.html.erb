<div class="view_style">
  <div class="overflow-y-scroll styles">
    <% styles.each do |si| %>
      <% tags = si.tag_list.map { |item| item.parameterize('-') } %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 clearLRpadding <%= tags.join(' ') %>" style="position : relative;">
        <div class="style-block" data-style-id="<%= si.id %>">
          <%= image_tag(si.image.thumb200.url, class: "imagesStyle roundImageStyle") %>
        </div>
        <% link_to(image_tag(si.image.thumb200.url, class: "imagesStyle roundImageStyle"), "/styles/#{si.id}/mark", method: :put, remote: true)  %>
        <div class="mark_style_<%= si.id %>">
          <% if @active && @active == si %>
            <div class="marked">
              <img class="imagesStyle" src="/check.png" alt="Check">
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>