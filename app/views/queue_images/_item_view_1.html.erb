<% debug = false %>

<%item = item_view_1 %>
<%res_img = item.result_image %>

  <div class="row visible-lg styleRow-lg">
    <div class="col-lg-6 col-lg-offset-3 ">

    <div class="row styleHeadRow-lg">
      <% if !current_client.nil? %>
      <div class="col-lg-1 clearLRpadding">
        <%= image_tag(current_client.remote_avatar || current_client.avatar, class: "userAvatarImage-lg") if !item.client.nil? %>
      </div>
      <% end %>

      <div class="col-lg-7 styleHeadCol2-lg">
        <span class="textUserStyle-lg">
            <%= truncate(item.client.name, :length => 25)  if !item.client.nil? %>
         </span>
      </div>

      <div class="col-lg-3 styleHeadCol2-lg">
        <% if debug %>
        <span class="user">
            <%= link_to "remove", item, method: :delete, data: { confirm: "Are you sure you want to delete?" } if debug %>
        </span>
        <% end %>
      </div>

      <div class="col-lg-1" style="height: 100%">
        <%= render(partial: 'queue_images/like', :locals => {item: item}) %>
      </div>
    </div>

    <div class="row">
        mixing_level: <%= item.mixing_level %>, is_premium: <%= item.is_premium%>
    </div>

    <div class="row">

    <div class="col-lg-4 styleContentImage1-lg ">
      <div class="row">
        <div class="imageBlock200-lg col-lg-12" >
          <%= image_tag(item.content.image.thumb200.url, class: "imagesStyle roundImageStyle") %>
        </div>
        <div class="imageBlock200-lg col-lg-12">
          <%= link_to(image_tag(item.style.image.thumb200.url, alt:item.style.image, class: "imagesStyle roundImageStyle"), new_queue_image_path(style: item.style.id, is_premium: item.is_premium, mixing_level: item.mixing_level), class: "imagesStyle", data:{ lightbox: "content"}) %>
        </div>
      </div>
    </div>

    <div class=" col-lg-7 imageBlock400-lg">
      <%= link_to(image_tag(res_img.imageurl.thumb400.url, alt:res_img.imageurl, class: "imagesStyle roundImageStyle"), res_img.imageurl.url, class: "imagesStyle", data:{ lightbox: "content"})  if res_img %>
    </div>

    </div></div>

  </div>


  <div class="row hidden-lg styleRow-xs "><div class=" col-md-12 col-sm-12 col-xs-12 ">


  <div class="row styleHeadRow-xs">
    <div class="col-md-2 col-sm-2 col-xs-2 styleHeadCol1-xs">
      <%= image_tag(item.client.avatar.avatar100.url, class: "userAvatarImage-xl") if !item.client.nil? %>
    </div>

    <div class="col-md-8 col-sm-8 col-xs-8 styleHeadCol2-xs">
      <span class="textUserStyle-xs">
        <%= truncate(item.client.name, :length => 15)  if !item.client.nil? %>
      </span>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-2 clearLRpadding" style="height: 100%">
       <%= render(partial: 'queue_images/like', :locals => {item: item}) %>
    </div>
  </div>

  <div class="row">
       <div class="col-md-6 col-sm-6 col-xs-6  imageBlock200-xs" >
         <%= image_tag(item.content.image.thumb200.url, class: "contentImageStyle-xs roundImageStyle")%>
       </div>
       <div class="col-md-6 col-sm-6 col-xs-6  imageBlock200-xs">
         <%= link_to(image_tag(item.style.image.thumb200.url, alt:item.style.image, class: "contentImageStyle-xs roundImageStyle"), new_queue_image_path(style: item.style.id, is_premium: item.is_premium, mixing_level: item.mixing_level), class: "contentImageStyle-xs") %>
       </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12  imageBlock200-xs" >
        <%= link_to(image_tag(res_img.imageurl.thumb400.url, alt:res_img.imageurl, class: "contentImageStyle-xs roundImageStyle"), res_img.imageurl.url, class: "contentImageStyle-xs")  if res_img %>
    </div>
  </div>





</div></div>





