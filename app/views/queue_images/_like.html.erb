<div class="like_panel_<%= item.id %> <%= 'liked' unless policy(item).like_image? || !client_signed_in? %>">
  <div class="likeTextStyle textAboutStyle"><%= item.likes_count %></div>
  <div class="likeStyle">
  <% if client_signed_in? %>
    <% if item.client != current_client %>
      <% if policy(item).like_image? %>
        <%= link_to(image_tag("/unlike.png", alt:"like", class: "imagesStyle"), "/queue_images/#{item.id}/like", method: :put, remote: true) %>
      <% else %>
        <%= link_to(image_tag("/like.png", alt:"like", class: "imagesStyle"), "/queue_images/#{item.id}/unlike", method: :put, remote: true)%>
      <% end %>
    <% else %>
      <%= image_tag("/unlike.png", alt:"like", class: "imagesStyle") %>
    <% end %>
  <% else %>
      <%= link_to(image_tag("/unlike.png", alt:"like", class: "imagesStyle"), new_client_registration_path) %>
  <% end %>
  </div>
</div>