<div id="status_panel_<%= item.id %>">
  <%= link_to "DESTROY", url_for(controller: 'admin_pages', action: 'delete_queue', id: item.id), method: :put%> |
  <%= link_to "REMOTE", url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_DELETED), method: :put, remote: true %> |
  <%= link_to "ERROR", url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_ERROR), method: :put, remote: true %> |
  <%= link_to "HIDDEN", url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_HIDDEN), method: :put, remote: true %> |
  <%= link_to "EXCEPT", url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_NOT_PROCESSED), method: :put, remote: true %> |
  <%= link_to "PENDING", url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_IN_PROCESS), method: :put, remote: true %> |
  <%= link_to "TREATED",  url_for(controller: 'admin_pages', action: 'update_queue_status', id: item.id, status: ConstHelper::STATUS_PROCESSED), method: :put, remote: true %> |

  <% if item.style.status == ConstHelper::BOT_STYLE_IMAGE%>
    <%= link_to "FILTER rob bot", url_for(controller: 'admin_pages', action: 'update_style_status', id: item.id, status: 0), method: :put, remote: true %> |
  <% else %>
    <%= link_to "POST FILTER bot", url_for(controller: 'admin_pages', action: 'update_style_status', id: item.id, status: ConstHelper::BOT_STYLE_IMAGE), method: :put, remote: true %> |
  <% end %>

  <% if item.content.status == ConstHelper::BOT_CONTENT_IMAGE %>
      <%= link_to "Take away content from BOTA", url_for(controller: 'admin_pages', action: 'update_content_status', id: item.id, status: 0), method: :put, remote: true %>
  <% else %>
      <%= link_to "GIVE CONTENT bot", url_for(controller: 'admin_pages', action: 'update_content_status', id: item.id, status: ConstHelper::BOT_CONTENT_IMAGE), method: :put, remote: true %>
  <% end %>

</div>